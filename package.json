{
  "name": "erp-modul",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.json",
    "prepare": "node .husky/install.mjs",
    "lint-staged": "lint-staged -v"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.556.0",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/cache-manager": "^2.2.2",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.3.7",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schematics": "^10.1.1",
    "@prisma/client": "^5.18.0",
    "@sendgrid/mail": "^8.1.3",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.4",
    "argon2": "^0.40.1",
    "axios": "^1.7.4",
    "big.js": "^6.2.1",
    "cache-manager": "^5.5.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "class-validator-extended": "^4.0.0",
    "country-list-js": "^3.1.8",
    "date-fns": "^3.6.0",
    "docx": "^8.5.0",
    "docx-pdf": "^0.0.1",
    "docxtemplater": "^3.47.4",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.1",
    "dotenv-expand": "^11.0.6",
    "express": "^5.0.0",
    "handlebars": "^4.7.8",
    "ms": "^3.0.0-canary.1",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "nest-winston": "^1.9.4",
    "nestjs-minio-client": "^2.2.0",
    "node-schedule": "^2.1.1",
    "pdf-lib": "^1.17.1",
    "pizzip": "^3.1.7",
    "ramda": "^0.29.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "sharp": "^0.33.3",
    "source-map-support": "^0.5.21",
    "uuid": "^9.0.1",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/big.js": "^6.2.2",
    "@types/country-list-js": "^3.1.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.11",
    "@types/multer-s3": "^3.0.3",
    "@types/node": "^20.12.7",
    "@types/node-schedule": "^2.1.7",
    "@types/ramda": "^0.29.12",
    "@types/source-map-support": "^0.5.10",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.6",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "prisma": "^5.18.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "lint-staged": {
    "(apps|libs)/**/*.ts": [
      "npm run format",
      "npm run lint"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@erp-modul/shared(|/.*)$": "<rootDir>/libs/shared/src/$1",
      "^@app/service-connector(|/.*)$": "<rootDir>/libs/service-connector/src/$1"
    },
    "coveragePathIgnorePatterns": [
      "node_modules",
      "test-config",
      ".module.ts",
      ".dto.ts",
      ".config.ts",
      ".options.ts",
      ".consts.ts",
      ".types.ts",
      "main.ts",
      ".mock.ts",
      "prisma",
      "(.*)Service.provider.ts",
      ".d.ts"
    ]
  }
}
