generator client {
  provider = "prisma-client-js"
  output = "./client"
  binaryTargets = ["native", "darwin-arm64", "linux-musl-arm64-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("FILES_POSTGRES_URL")
}


model UploadedFile {
  id            Int       @id @default(autoincrement())
  
  name          String    // Original name of the file
  path          String    // Key path in the S3 bucket
  url           String    // URL to access the file directly
  mimeType      String    // MIME type of the file
  size          Int       // File size in bytes
  userId        Int?       // Optional: User ID if applicable
  version       Int?      // Optional: file versioning
  checksum      String?   // File integrity checksum
  thumbnailUrl  String?   // URL to a generated thumbnail, if applicable
  tags          String[]  // Array of tags for categorization
  status        Status    @default(Active)

  createdAt     DateTime  @default(now()) // Upload timestamp
}

enum Status {
  Active
  Archived
}
